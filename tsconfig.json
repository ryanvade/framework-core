{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "paths": {
          "Application/*": [
            "src/Application/*"
          ],
          "Container/*": [
            "src/Container/*"
          ],
          "Contracts/*": [
            "src/Contracts/*"
          ],
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "lib": ["es6"],
    "types": ["reflect-metadata"]
}
